<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15acdc"
    android:visibility="visible"
    tools:context=".Homepage">

    <TextView
        android:id="@+id/homepage_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/titan_scouting"
        android:textAllCaps="true"
        android:fontFamily="@font/vanfonting"
        android:textColor="@color/white"
        android:textColorHighlight="#0DE116"
        android:textColorHint="#07DA0F"
        android:textFontWeight="@integer/material_motion_duration_long_2"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/start"
        android:textSize="150sp"
        android:fontFamily="@font/vanfonting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logs_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="264dp"
        android:layout_height="183dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        app:srcCompat="@drawable/techologo" />

    <Button
        android:id="@+id/logs_btn"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/logs"
        android:textSize="150sp"
        android:fontFamily="@font/vanfonting"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="163dp"
        android:layout_height="61dp"
        android:fontFamily="@font/vanfonting"
        android:onClick="showSchedule"
        android:text="Schedule"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />


</androidx.constraintlayout.widget.ConstraintLayout>