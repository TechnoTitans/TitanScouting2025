<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/match_button"
        android:layout_width="764dp"
        android:layout_height="85dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <LinearLayout
        android:layout_width="890dp"
        android:layout_height="608dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/match_button"
        app:layout_constraintVertical_bias="0.0">


        <Button
            android:layout_width="300dp"
            android:layout_height="00dp"
            android:layout_weight="33"
            android:onClick="pregame"
            android:text="@string/pre_game"
            android:textSize="35sp">

        </Button>

        <Button
            android:layout_width="300dp"
            android:layout_height="00dp"
            android:layout_weight="33"
            android:text="@string/logs"
            android:textSize="35sp"
            android:onClick="logs">

        </Button>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>