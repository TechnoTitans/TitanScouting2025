<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Endgame">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="500dp"
        android:scaleX="3"
        android:scaleY="3"
        android:text="@string/endgame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="199dp"
            android:layout_height="188dp"
            android:text="Scored in Trap"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="225dp" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="199dp"
            android:layout_height="188dp"
            android:text="Onstage"
            tools:layout_editor_absoluteX="238dp"
            tools:layout_editor_absoluteY="225dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/toggleButton3"
                android:layout_width="199dp"
                android:layout_height="94dp"
                android:text="Park"
                tools:layout_editor_absoluteX="436dp"
                tools:layout_editor_absoluteY="225dp" />

            <ToggleButton
                android:id="@+id/toggleButton4"
                android:layout_width="199dp"
                android:layout_height="94dp"
                android:text="Harmony"
                tools:layout_editor_absoluteX="436dp"
                tools:layout_editor_absoluteY="319dp" />
        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="300dp"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="447dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="Mechanical Reliability"
                android:textAlignment="center"
                tools:layout_editor_absoluteY="465dp" />

            <SeekBar
                android:id="@+id/seekBar1"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="368dp"
                android:layout_height="58dp"
                android:max="5"
                android:progress="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="627dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Defense Ability"
                android:textAlignment="center"
                tools:layout_editor_absoluteY="545dp" />

            <SeekBar
                android:id="@+id/seekBar2"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="368dp"
                android:layout_height="58dp"
                android:max="5"
                android:progress="3"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="108dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="533dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Driver Ability"
                android:textAlignment="center"
                tools:layout_editor_absoluteY="619dp" />

            <SeekBar
                android:id="@+id/seekBar3"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="368dp"
                android:layout_height="58dp"
                android:max="5"
                android:progress="3"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="225dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="750dp"
        android:orientation="vertical"
        app:flow_verticalGap="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/red"
            android:text="Drops Pieces?" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/red"
            android:text="Can Pick From Ground?" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/red"
            android:text="KitBot?" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/red"
            android:text="Pancake?" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:text="Spotlit?" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>