<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crescendo2"
    tools:context=".views.Teleop">

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:onClick="autonomous"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="@+id/autoTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/autoTitle" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:onClick="endGame"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="@+id/autoTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/autoTitle" />

    <TextView
        android:id="@+id/autoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Teleop"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/underline"
        android:layout_width="140dp"
        android:layout_height="5dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/autoTitle"
        app:layout_constraintLeft_toLeftOf="@id/autoTitle"
        app:layout_constraintRight_toRightOf="@id/autoTitle" />

    <TextView
        android:id="@+id/speakerScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="328dp"
        android:layout_marginTop="172dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Speaker"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <Button
        android:id="@+id/addSpeaker"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:alpha="0.6"
        android:onClick="addSpeakerScored"
        android:text="@string/plus"
        android:textSize="120sp"
        app:layout_constraintLeft_toLeftOf="@id/speakerScores"
        app:layout_constraintTop_toBottomOf="@id/speakerScores" />

    <Button
        android:id="@+id/subtractSpeaker"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:alpha="0.6"
        android:backgroundTint="@color/red"
        android:onClick="subtractSpeakerScored"
        android:text="@string/minus"
        android:textSize="120sp"
        app:layout_constraintLeft_toRightOf="@id/addSpeaker"
        app:layout_constraintTop_toTopOf="@id/addSpeaker" />

    <TextView
        android:id="@+id/speakersScored"
        android:layout_width="140dp"
        android:layout_height="54dp"
        android:ems="10"
        android:gravity="center"
        android:hint="0"
        android:text="0"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@id/speakerScores"
        app:layout_constraintLeft_toRightOf="@id/speakerScores"
        app:layout_constraintRight_toRightOf="@id/subtractSpeaker"
        app:layout_constraintTop_toTopOf="@id/speakerScores" />

    <TextView
        android:id="@+id/speakerMisses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="172dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/missed"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintStart_toEndOf="@+id/speakersScored"
        app:layout_constraintTop_toBottomOf="@+id/underline" />

    <Button
        android:id="@+id/addSpeakersMissed"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:alpha="0.6"
        android:onClick="subtractSpeakerScored"
        android:text="@string/plus"
        android:textSize="120sp"
        app:layout_constraintLeft_toLeftOf="@id/speakerMisses"
        app:layout_constraintTop_toBottomOf="@id/speakerScores" />

    <Button
        android:id="@+id/subtractSpeakersMissed"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:alpha="0.6"
        android:backgroundTint="@color/red"
        android:onClick="subtractSpeakerMissed"
        android:text="@string/minus"
        android:textSize="120sp"
        app:layout_constraintLeft_toRightOf="@id/addSpeakersMissed"
        app:layout_constraintTop_toTopOf="@id/addSpeaker" />

    <TextView
        android:id="@+id/speakersMissed"
        android:layout_width="140dp"
        android:layout_height="54dp"
        android:ems="10"
        android:gravity="center"
        android:text="0"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@id/speakerScores"
        app:layout_constraintLeft_toRightOf="@id/speakerMisses"
        app:layout_constraintRight_toRightOf="@id/subtractSpeakersMissed"
        app:layout_constraintTop_toTopOf="@id/speakerScores" />

    <TextView
        android:id="@+id/ampScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Amp"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintLeft_toLeftOf="@id/speakerScores"
        app:layout_constraintTop_toBottomOf="@id/addSpeaker" />

    <Button
        android:id="@+id/addAmps"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        android:alpha="0.6"
        android:onClick="addAmpScored"
        android:text="@string/plus"
        android:textSize="90sp"
        app:layout_constraintLeft_toLeftOf="@id/ampScores"
        app:layout_constraintTop_toBottomOf="@id/ampScores" />

    <Button
        android:id="@+id/subtractAmp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:alpha="0.6"
        android:backgroundTint="@color/red"
        android:onClick="subtractAmpScored"
        android:text="@string/minus"
        android:textSize="90sp"
        app:layout_constraintLeft_toRightOf="@id/addAmps"
        app:layout_constraintTop_toTopOf="@id/addAmps" />

    <TextView
        android:id="@+id/ampsScored"
        android:layout_width="140dp"
        android:layout_height="54dp"
        android:ems="10"
        android:gravity="center"
        android:hint="0"
        android:text="0"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ampScores"
        app:layout_constraintLeft_toRightOf="@id/ampScores"
        app:layout_constraintRight_toRightOf="@id/subtractAmp"
        app:layout_constraintTop_toTopOf="@id/ampScores" />

    <TextView
        android:id="@+id/ampMisses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Missed"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintLeft_toLeftOf="@id/speakerMisses"
        app:layout_constraintTop_toTopOf="@id/ampScores" />

    <Button
        android:id="@+id/addAmpsMissed"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        android:alpha="0.6"
        android:onClick="addAmpMissed"
        android:text="@string/plus"
        android:textSize="90sp"
        app:layout_constraintLeft_toLeftOf="@id/ampMisses"
        app:layout_constraintTop_toBottomOf="@id/ampMisses" />

    <Button
        android:id="@+id/subtractAmpsMissed"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:alpha="0.6"
        android:backgroundTint="@color/red"
        android:onClick="subtractAmpMissed"
        android:text="@string/minus"
        android:textSize="90sp"
        app:layout_constraintLeft_toRightOf="@id/addAmpsMissed"
        app:layout_constraintTop_toTopOf="@id/addAmpsMissed" />

    <TextView
        android:id="@+id/ampsMissed"
        android:layout_width="140dp"
        android:layout_height="54dp"
        android:ems="10"
        android:gravity="center"
        android:hint="0"
        android:text="0"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ampScores"
        app:layout_constraintLeft_toRightOf="@id/ampMisses"
        app:layout_constraintRight_toRightOf="@id/subtractAmpsMissed"
        app:layout_constraintTop_toTopOf="@id/ampScores" />


</androidx.constraintlayout.widget.ConstraintLayout>