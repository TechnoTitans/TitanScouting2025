<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crescendo2"
    tools:context=".views.Autonomous">

    <Button
        android:id="@+id/backToAutoPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/techno_titans"

        android:scaleX="1.25"
        android:scaleY="1.25"
        android:text="To Auto Path"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextToTeleop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/techno_titans"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:text="To Teleop"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/autoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Autonomous"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/underline"
        app:layout_constraintEnd_toEndOf="@+id/autoHighlight"
        app:layout_constraintStart_toStartOf="@+id/autoHighlight"
        app:layout_constraintTop_toTopOf="@+id/autoHighlight"/>

    <View
        android:id="@+id/underline"
        android:layout_width="140dp"
        android:layout_height="5dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="13dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/autoHighlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/autoHighlight"
        android:layout_width="399dp"
        android:layout_height="96dp"
        android:layout_marginTop="4dp"
        android:alpha="0.1"
        android:background="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <CheckBox
        android:id="@+id/startsMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        android:scaleX="1"
        android:scaleY="1"
        android:text="Middle"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/startsAmpSide"
        app:layout_constraintEnd_toStartOf="@+id/leftGuideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startsSourceSide" />

    <CheckBox
        android:id="@+id/startsAmpSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        android:scaleX="1"
        android:scaleY="1"
        android:text="Amp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/leftGuideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startsMiddle" />

    <CheckBox
        android:id="@+id/startsSourceSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        android:scaleX="1"
        android:scaleY="1"
        android:text="Source"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/startsMiddle"
        app:layout_constraintEnd_toStartOf="@+id/leftGuideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movedCheckbox" />

    <CheckBox
        android:id="@+id/movedCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        android:scaleX="1"
        android:scaleY="1"
        android:text="Leave"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/startsSourceSide"
        app:layout_constraintEnd_toStartOf="@+id/leftGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topGuideline" />

    <Button
        android:id="@+id/subtractSpeaker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:backgroundTint="@color/red"
        android:onClick="subtractSpeakerScored"
        android:shadowRadius="0"
        android:text="@string/minus"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/speakerMissed"
        app:layout_constraintEnd_toStartOf="@+id/addAmps"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addSpeaker"
        app:layout_constraintTop_toBottomOf="@+id/speakerScored" />

    <TextView
        android:id="@+id/ampMissed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ampMisses"
        app:layout_constraintTop_toTopOf="@id/guideline4" />

    <Button
        android:id="@+id/subtractAmp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:backgroundTint="@color/red"
        android:onClick="subtractAmpScored"
        android:text="@string/minus"
        android:textColor="@color/white"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/ampMissed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addAmps"
        app:layout_constraintTop_toBottomOf="@+id/ampScored" />

    <TextView
        android:id="@+id/speakerMisses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/missed"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="@+id/speakerMissed"
        app:layout_constraintEnd_toStartOf="@+id/speakerMissed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintTop_toTopOf="@+id/speakerMissed" />

    <TextView
        android:id="@+id/ampScores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Amp"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="@+id/speakerScored"
        app:layout_constraintEnd_toStartOf="@+id/ampScored"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/speakerScored"
        app:layout_constraintTop_toTopOf="@+id/speakerScored" />

    <Button
        android:id="@+id/addSpeakersMissed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:backgroundTint="@color/techno_titans"
        android:onClick="addSpeakerMissed"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/subtractSpeakersMissed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/startsMiddle"
        app:layout_constraintStart_toStartOf="@+id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/speakerMisses" />

    <Button
        android:id="@+id/addAmps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:backgroundTint="@color/techno_titans"
        android:onClick="addAmpScored"
        android:text="@string/plus"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/ampMisses"
        app:layout_constraintEnd_toStartOf="@+id/subtractAmp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/subtractSpeaker"
        app:layout_constraintTop_toBottomOf="@+id/ampScores" />

    <Button
        android:id="@+id/addSpeaker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:backgroundTint="@color/techno_titans"
        android:onClick="addSpeakerScored"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/speakerMisses"
        app:layout_constraintEnd_toStartOf="@+id/subtractSpeaker"
        app:layout_constraintStart_toStartOf="@+id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/speakerScores" />

    <Button
        android:id="@+id/subtractSpeakersMissed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:backgroundTint="@color/red"
        android:onClick="subtractSpeakerMissed"
        android:text="@string/minus"
        android:textColor="@color/white"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addAmpsMissed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addSpeakersMissed"
        app:layout_constraintTop_toBottomOf="@+id/speakerMissed" />

    <Button
        android:id="@+id/addAmpsMissed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:backgroundTint="@color/techno_titans"
        android:onClick="addAmpMissed"
        android:text="@string/plus"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/subtractAmpsMissed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/subtractSpeakersMissed"
        app:layout_constraintTop_toBottomOf="@+id/ampMisses" />

    <Button
        android:id="@+id/subtractAmpsMissed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:backgroundTint="@color/red"
        android:onClick="subtractAmpMissed"
        android:text="@string/minus"
        android:textColor="@color/white"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addAmpsMissed"
        app:layout_constraintTop_toBottomOf="@+id/ampMissed" />

    <TextView
        android:id="@+id/speakerMissed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/ampMisses"
        app:layout_constraintEnd_toStartOf="@+id/ampMisses"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/speakerMisses"
        app:layout_constraintTop_toTopOf="@+id/ampMisses" />

    <TextView
        android:id="@+id/ampMisses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/missed"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="@+id/ampMissed"
        app:layout_constraintEnd_toStartOf="@+id/ampMissed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/speakerMissed"
        app:layout_constraintTop_toTopOf="@+id/ampMissed" />

    <TextView
        android:id="@+id/speakerScores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Speaker"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintEnd_toStartOf="@+id/speakerScored"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/movedCheckbox"
        app:layout_constraintStart_toStartOf="@+id/leftGuideline"
        app:layout_constraintTop_toTopOf="@+id/topGuideline" />

    <TextView
        android:id="@+id/speakerScored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/speakerScores"
        app:layout_constraintEnd_toStartOf="@+id/ampScores"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/speakerScores"
        app:layout_constraintTop_toTopOf="@+id/speakerScores" />

    <TextView
        android:id="@+id/ampScored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/ampScores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ampScores"
        app:layout_constraintTop_toTopOf="@+id/ampScores" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>