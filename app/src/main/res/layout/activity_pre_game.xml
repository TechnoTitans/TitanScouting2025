<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".views.Pregame">

    <Button
        android:id="@+id/Blue2"
        android:layout_width="145dp"
        android:layout_height="190dp"
        android:text="Blue 2"
        android:textColor="@color/white"
        app:backgroundTint="#0000FF"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/Blue1"
        app:layout_constraintEnd_toEndOf="@+id/Red2"
        app:layout_constraintStart_toStartOf="@+id/Red2"
        app:layout_constraintTop_toTopOf="@+id/Blue1" />

    <Button
        android:id="@+id/Red3"
        android:layout_width="145dp"
        android:layout_height="190dp"
        android:text="Red 3"
        android:textColor="@color/white"
        app:backgroundTint="#E40100"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/Red1"
        app:layout_constraintEnd_toEndOf="@id/NextButtonPregame"
        app:layout_constraintTop_toTopOf="@+id/Red1" />

    <Button
        android:id="@+id/Red2"
        android:layout_width="145dp"
        android:layout_height="190dp"
        android:text="Red 2"
        android:textColor="@color/white"
        app:backgroundTint="#E40100"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/Red1"
        app:layout_constraintStart_toStartOf="@id/Red1"
        app:layout_constraintEnd_toEndOf="@id/Red3"
        app:layout_constraintTop_toTopOf="@+id/Red1" />

    <Button
        android:id="@+id/Red1"
        android:layout_width="145dp"
        android:layout_height="190dp"
        android:text="Red 1"
        android:textColor="@color/white"
        app:backgroundTint="@color/red"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="@id/pregameTitle"
        app:layout_constraintTop_toBottomOf="@id/pregameTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <Button
        android:id="@+id/Blue1"
        android:layout_width="145dp"
        android:layout_height="190dp"
        android:text="Blue 1"
        android:textColor="@color/white"
        app:backgroundTint="#0000FF"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/Red1"
        app:layout_constraintEnd_toEndOf="@id/Red1"
        app:layout_constraintTop_toBottomOf="@id/Red1" />

    <Button
        android:id="@+id/Blue3"
        android:layout_width="145dp"
        android:layout_height="190dp"
        android:text="Blue 3"
        android:textColor="@color/white"
        app:backgroundTint="#0000FF"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toTopOf="@id/Blue1"
        app:layout_constraintBottom_toBottomOf="@id/Blue1"
        app:layout_constraintStart_toStartOf="@id/Red3"
        app:layout_constraintEnd_toEndOf="@+id/Red3" />

    <Button
        android:id="@+id/NextButtonPregame"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="11sp"
        android:text="Next"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toTopOf="@id/pregameTitle"
        app:layout_constraintBottom_toBottomOf="@id/pregameTitle"/>

    <Button
        android:id="@+id/BackButtonPregame"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="11sp"
        android:text="Back"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toTopOf="@id/pregameTitle"
        app:layout_constraintBottom_toBottomOf="@id/pregameTitle"/>

    <EditText
        android:id="@+id/MatchNumberPregameResponse"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/text"
        android:ems="10"
        android:hint="e.g 17"
        android:inputType="number"
        android:textColor="@color/text"
        android:maxLength="3"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/MatchNumberPregameTextView"
        app:layout_constraintStart_toStartOf="@+id/MatchNumberPregameTextView"
        app:layout_constraintEnd_toEndOf="@id/MatchNumberPregameTextView"
        android:nextFocusDown="@+id/ScouterNamePregameResponse"/>

    <TextView
        android:id="@+id/MatchNumberPregameTextView"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Match Number"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="22sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Red1"
        app:layout_constraintTop_toTopOf="@id/Red1" />

    <TextView
        android:id="@+id/TeamNumberPregameTextView"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Team Number"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/MatchNumberPregameResponse"
        app:layout_constraintStart_toStartOf="@+id/MatchNumberPregameTextView"
        app:layout_constraintEnd_toEndOf="@id/MatchNumberPregameTextView" />

    <EditText
        android:id="@+id/TeamNumberInput"
        android:autofillHints=""
        android:text=""
        android:inputType="number"
        android:hint="e.g 1683"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/text"
        android:ems="10"
        android:textColor="@color/text"
        android:maxLength="5"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/TeamNumberPregameTextView"
        app:layout_constraintStart_toStartOf="@+id/MatchNumberPregameTextView"
        app:layout_constraintEnd_toEndOf="@id/MatchNumberPregameTextView"
        android:imeOptions="actionDone" />

    <TextView
        android:id="@+id/ScouterNamePregameTextView"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Scouter Name"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/TeamNumberInput"
        app:layout_constraintStart_toStartOf="@+id/MatchNumberPregameTextView"
        app:layout_constraintEnd_toEndOf="@id/MatchNumberPregameTextView" />

    <EditText
        android:id="@+id/ScouterNamePregameResponse"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/text"
        android:ems="10"
        android:hint="e.g Akarsh"
        android:inputType="text"
        android:textColor="@color/text"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/ScouterNamePregameTextView"
        app:layout_constraintStart_toStartOf="@+id/MatchNumberPregameTextView"
        app:layout_constraintEnd_toEndOf="@id/MatchNumberPregameTextView" />

    <TextView
        android:id="@+id/No_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Show"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toStartOf="@id/ScouterNamePregameTextView"
        app:layout_constraintTop_toTopOf="@id/noShowCheckBox"
        app:layout_constraintBottom_toBottomOf="@id/noShowCheckBox"
        app:layout_constraintEnd_toStartOf="@id/noShowCheckBox"/>

    <TextView
        android:id="@+id/pregameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/pregame"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/noShowCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1"
        android:scaleY="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ScouterNamePregameResponse"
        app:layout_constraintEnd_toEndOf="@id/ScouterNamePregameResponse"/>
</androidx.constraintlayout.widget.ConstraintLayout>