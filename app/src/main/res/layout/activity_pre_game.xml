<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".views.Pregame">

    <Button
        android:id="@+id/Blue2"
        android:layout_width="145dp"
        android:layout_height="83dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="64dp"
        android:onClick="blue2CLicked"
        android:text="Blue 2"
        app:backgroundTint="#0000FF"
        app:layout_constraintStart_toEndOf="@+id/Blue1"
        app:layout_constraintTop_toBottomOf="@+id/Red2" />

    <Button
        android:id="@+id/Red3"
        android:layout_width="157dp"
        android:layout_height="87dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="88dp"
        android:onClick="red3CLicked"
        android:text="Red 3"
        app:backgroundTint="#e40100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Red2"
        android:layout_width="141dp"
        android:layout_height="80dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="312dp"
        android:onClick="red2CLicked"
        android:text="Red 2"
        app:backgroundTint="#e40100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Red3"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/Red1" />

    <Button

        android:id="@+id/Red1"
        android:layout_width="146dp"
        android:layout_height="81dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="312dp"
        android:text="Red 1"
        android:onClick="red1CLicked"
        app:backgroundTint="#e40100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Blue1"
        android:layout_width="152dp"
        android:layout_height="85dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="60dp"
        android:text="Blue 1"
        android:onClick="blue1CLicked"
        app:backgroundTint="#0000FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Red1" />

    <Button
        android:id="@+id/Blue3"
        android:layout_width="156dp"
        android:layout_height="81dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="92dp"
        android:onClick="blue3CLicked"
        android:text="Blue 3"
        app:backgroundTint="#0000FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Red3" />

    <Button
        android:id="@+id/NextButtonPregame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="40dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/BackButtonPregame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="788dp"
        android:layout_marginBottom="40dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/NextButtonPregame"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/TeamNumberResponsePregame"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="356dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="e.g 1683"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TeamNumberPregameTextView" />

    <TextView
        android:id="@+id/TeamNumberPregameTextView"
        android:layout_width="211dp"
        android:layout_height="80dp"
        android:layout_marginStart="356dp"
        android:layout_marginBottom="528dp"
        android:text="Team Number"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/BackButtonPregame"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/MatchNumberPregameResponse"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="1004dp"
        android:layout_marginBottom="468dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="e.g 17"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/MatchNumberPregameTextView"
        android:layout_width="248dp"
        android:layout_height="83dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="96dp"
        android:text="Match Number"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/MatchNumberPregameResponse"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ScouterNamePregameTextView"
        android:layout_width="224dp"
        android:layout_height="61dp"
        android:layout_marginStart="924dp"
        android:layout_marginTop="52dp"
        android:text="Scouter Name"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/ScouterNamePregameResponse"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="480dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="e.g Matthew"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/No_show_text"
        android:layout_width="232dp"
        android:layout_height="85dp"
        android:layout_marginStart="616dp"
        android:layout_marginTop="48dp"
        android:text="No show"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="567dp"
        android:layout_height="135dp"
        android:layout_marginTop="16dp"
        android:text="@string/pre_game"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/noShowCheckBox"
        android:layout_width="192dp"
        android:layout_height="123dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="64dp"
        android:scaleX="5"
        android:scaleY="5"
        app:layout_constraintStart_toEndOf="@+id/TeamNumberResponsePregame"
        app:layout_constraintTop_toBottomOf="@+id/No_show_text" />

</androidx.constraintlayout.widget.ConstraintLayout>